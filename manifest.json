{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.0",
  "description": "Pomodoro timer with ambient background sounds.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./assets/icons/icon16.png",
      "48": "./assets/icons/icon48.png",
      "128": "./assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "./js/background.js"
  },
  "permissions": ["storage", "action"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
		"web_accessible_resources": [
  {
    "resources": ["./assets/fonts/*.ttf", "./js/*.js"],
    "matches": ["<all_urls>"]
  }
]
}
